<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_border_16"
            android:backgroundTint="@color/white"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/ic_back_arrow" />

        <com.tm109.foodconnect.helper.CustomTextViewBold
            android:id="@+id/txt_loan_name"
            style="@style/white_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img_back"
            android:gravity="center"
            android:text="Profile"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/bg_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_40sdp"
        android:tint="@color/gray"
        android:scaleType="fitXY"
        android:src="@drawable/white_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_header"
        android:orientation="vertical"
        android:paddingTop="@dimen/_40sdp"
        android:paddingBottom="@dimen/_30sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_user_placeholder"
                app:civ_circle_background_color="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/imgUser"
                android:orientation="vertical">

                <com.tm109.foodconnect.helper.CustomTextViewBold
                    android:id="@+id/txt_user_nm"
                    style="@style/black_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_3sdp"
                    tools:text="User Name" />

                <com.tm109.foodconnect.helper.CustomTextView
                    android:id="@+id/txt_mobile"
                    style="@style/black_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_user_nm"
                    tools:text="+91 9999999999" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_50sdp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_width="1"
                >


            </LinearLayout>

            <View
                android:layout_width="@dimen/_5sdpdp"
                android:layout_height="@dimen/_2sdp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_width="1"
                >


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rel_edt_profile"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/lin_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_profile" />

            </LinearLayout>

            <com.tm109.foodconnect.helper.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                style="@style/black_16"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/lin_image"
                android:layout_height="wrap_content"
                android:text="Edit Profile" />

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_alignParentEnd="true"
                android:layout_height="@dimen/_12sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow"
                android:tint="@color/black"
                />

        </RelativeLayout>
        <View
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/black"
            />

        <RelativeLayout
            android:id="@+id/rel_term_conditions"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/lin_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_profile" />

            </LinearLayout>

            <com.tm109.foodconnect.helper.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                style="@style/black_16"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/lin_image"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions" />

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_alignParentEnd="true"
                android:layout_height="@dimen/_12sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow"
                android:tint="@color/black"
                />

        </RelativeLayout>
        <View
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/black"
            />

        <RelativeLayout
            android:id="@+id/rel_contact_us"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/lin_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_profile" />

            </LinearLayout>

            <com.tm109.foodconnect.helper.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                style="@style/black_16"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/lin_image"
                android:layout_height="wrap_content"
                android:text="Contact Us" />

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_alignParentEnd="true"
                android:layout_height="@dimen/_12sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow"
                android:tint="@color/black"
                />

        </RelativeLayout>
        <View
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/black"
            />

        <RelativeLayout
            android:id="@+id/rel_privacy_policy"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/lin_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_profile" />

            </LinearLayout>

            <com.tm109.foodconnect.helper.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                style="@style/black_16"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/lin_image"
                android:layout_height="wrap_content"
                android:text="Privacy Policy" />

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_alignParentEnd="true"
                android:layout_height="@dimen/_12sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow"
                android:tint="@color/black"
                />

        </RelativeLayout>
        <View
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/black"
            />

        <RelativeLayout
            android:id="@+id/rel_logout"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/lin_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_profile" />

            </LinearLayout>

            <com.tm109.foodconnect.helper.CustomTextViewSemiBold
                android:layout_width="wrap_content"
                style="@style/black_16"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/lin_image"
                android:layout_height="wrap_content"
                android:text="Logout" />

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_alignParentEnd="true"
                android:layout_height="@dimen/_12sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow"
                android:tint="@color/black"
                />

        </RelativeLayout>

    </LinearLayout>

